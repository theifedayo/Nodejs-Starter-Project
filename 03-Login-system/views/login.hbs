<center>
	<div class="container">
		<h1>Login</h1>
		{{#if messages }}
			<div class="alert alert-success" style="width: 30%;">{{ messages }}</div>
		{{/if}}
		{{#if errorMessages }}
			<div class="alert alert-danger" style="width: 30%;">{{ errorMessages }}</div>
		{{/if}}
		<form method="POST" autocomplete="off">
			<input type='text' name='username' placeholder='Username' value="{{username}}"/><br><br>
			<input type='password' name='password' placeholder='Password' value="{{password}}"/><br><br>
			<button type='submit' class="btn btn-primary pull-right" role="button" >Submit</button>
		</form>
	</div>
